  </div>


  <div class="row">

    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
      <div class="field">
        <%= f.label :username %><br>
        <%= f.text_field :username, :required => true, :autofocus => true %>
      </div>
    </div>

    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
      <div class="field">
        <%= f.label :email %><br>
        <%= f.email_field :email, :required => true %>
      </div>
    </div>
  </div>


