<h2>
  <%= link_to 'Create Snippet', new_snippet_path, class:"btn btn-default", type:"button" %>
</h2>

<table>
  <thead>
    <tr>
      <th colspan="3">Snippet Title</th>
      <th colspan="3">Snippet Description</th>
    </tr>
  </thead>

  <tbody>
    <% @favSnippets.each do |snippet| %>
      <tr>
        <td colspan="3" id="redhover" class="globalsnippet">
        <%= link_to(snippet, class: "globalsnippet") do %>
        <p><%= snippet.snippet_title %></p>
        <% end %></td>
        <td colspan="3"><%= snippet.snippet_description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
