  <body>
  <section id="container" >
      <!-- **********************************************************************************************************************************************************
      TOP BAR CONTENT & NOTIFICATIONS
      *********************************************************************************************************************************************************** -->
      <!--header start-->
      <header class="header black-bg">

            <!--logo start-->
            <a href="index.html" class="logo"><b>ror snippets</b></a>
            <!--logo end-->
            <div class="top-menu">
              <ul class="nav pull-right top-menu">
              </ul>
            </div>
        </header>
      <!--header end-->

      <!-- **********************************************************************************************************************************************************
      MAIN SIDEBAR MENU
      *********************************************************************************************************************************************************** -->
      <!--sidebar start-->
      <aside>
          <div id="sidebar"  class="nav-collapse">
              <!-- sidebar menu start-->
              <ul class="sidebar-menu" id="">

                  <p class="centered"><a href="profile.html"><img src="<%= cookies[:current_avatar] %>" class="img-circle" width="60"></a></p>

                  <h5 class="centered"><%= cookies[:current_username] %></h5>




                  <li class="mt">
                      <a class="active" href="/index">
                          <i class="fa fa-dashboard"></i>
                          <span>Dashboard</span>
                      </a>
                  </li>

                  <li class="sub-menu">
                      <a href="/personal" >
                          <i class="fa fa-coffee"></i>
                          <span>Personal Snippets</span>
                      </a>
                  </li>

                  <!-- <li class="sub-menu">
                      <a href="/fav" >
                          <i class="fa fa-heart"></i>
                          <span>Favourite</span>
                      </a>
                  </li> -->
                  <!-- <li class="sub-menu">
                      <a href="/performance" >
                          <i class="fa fa-bar-chart-o"></i>
                          <span>Performance</span>
                      </a>
                  </li> -->
                  <li class="sub-menu">
                      <a href="#" class="test">
                          <i class="fa fa-cogs"></i>
                          <span>Settings</span>
                      </a>
                      <ul class="sub">
<!--                           <li><a href="#"><i class="fa fa-level-up"></i>Upgrade</a></li>
                          <li><a href="#"><i class="fa fa-key"></i>Change Password</a></li>
                          <li><a href="#"><i class="fa fa-ban"></i>Deactivate Account</a></li> -->
                          <li><a href="/login"><i class="fa fa-sign-out"></i>Logout</a></li>
                      </ul>
                  </li>
              </ul>
              <!-- sidebar menu end-->
          </div>
      </aside>
      <!--sidebar end-->

      <!-- **********************************************************************************************************************************************************
      MAIN CONTENT
      *********************************************************************************************************************************************************** -->
      <!--main content start-->
      <section id="main-content">
          <section class="wrapper site-min-height">
            <!-- <h3><i class="footera fa-angle-right"></i> Blank Page</h3> -->
            <div class="row mt loading">
              <div class="col-lg-12">
                <h2 style="color:black"><%= @welcomemsg %></h2>
              <table>
                <thead>
                  <tr>
                    <th colspan="3" style="color:black">Snippet Title</th>
                    <th colspan="3" style="color:black">Snippet Description</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @snippets.each do |snippet| %>
                    <tr>
                      <td colspan="3"><%= snippet.snippet_title %></td>
                      <td colspan="3"><%= snippet.snippet_description %></td>
                      <td colspan="3"><%= link_to 'Show', snippet %></td>
                      <!-- <td><% link_to 'Edit', edit_snippet_path(snippet) %></td>
                      <td><%= link_to 'Destroy', snippet, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
                    </tr>
                  <% end %>
                </tbody>
              </table>
              </div>
            </div>

          </section><!--/wrapper -->
      </section><!-- /MAIN CONTENT -->

      <!--main content end-->
      <!--footer start-->
      <footer class="site-footer">
          <div class="text-center">
              Copyright Â© 2015 RoR Snippets
              <a href="index#" class="go-top">
                  <i class="fa fa-angle-up"></i>
